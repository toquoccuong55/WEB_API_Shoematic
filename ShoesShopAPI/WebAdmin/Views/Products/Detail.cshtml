@model DatabaseService.Entities.Product

@{
    ViewBag.Title = "Detail";
}

<h2>Detail</h2>

<div>
    <hr />
    <h4>Product</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.Raw("Product Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.Raw("Category Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Active)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Active)
        </dd>

    </dl>
</div>
<div>
    <hr />
    <h4>Image  @Html.ActionLink("Detail", "IndexByProductID", "ProductImages", new { id = Model.ID}, null)</h4>
    <div>
        @if (Model.ProductImages.Any())
        {
            foreach (var img in Model.ProductImages)
            {
                <img src="@Url.Content(img.PicURL)" alt="@Model.Name" width="140" height="100" />
            }
        }
    </div>
</div>
<div>
    <hr />
    <h4>Product Sku </h4>
    <div>
        @if (Model.ProductSkus.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>Size</td>
                        <td>Unit Price</td>
                        <td>Active</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sku in Model.ProductSkus)
                    {
                        <tr>
                            <td>@sku.Size</td>
                            <td>@sku.UnitPrice</td>
                            <td>@sku.Active</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
